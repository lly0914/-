<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pickerui="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="填写项目数 = 7 计算成绩    "
            android:gravity="center"
            android:textSize="15dp"/>
        <TextView
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="项目数=5 条件计算 "
            android:gravity="center"
            android:textSize="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/yjdg"
            android:layout_width="50dp"
            android:layout_height="match_parent" />
        <TextView
            android:gravity="center"
            android:text="一键打勾"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/check_mile"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/text_nlp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1000米"
            android:gravity="center"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:text="分"
            android:gravity="center"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/text_mins"
            android:layout_width="100dp"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:text="秒"
            android:gravity="center"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/text_s"
            android:layout_width="100dp"
            android:layout_height="match_parent" />

    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/check_zwtqu"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="坐位体前屈（厘米)"
            android:gravity="center"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/text_zwtqu"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/check_fhl"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="肺活量（毫升）"
            android:gravity="center"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/txt_fhl"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/check_bmi"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_width="100dp"

            android:layout_height="match_parent"
            android:text="身高（厘米）"
            android:gravity="center"
            android:textSize="15dp"/>
        <EditText
            android:id="@+id/height"
            android:layout_width="100dp"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="体重（公斤）"
            android:gravity="center"
            android:textSize="15dp"/>
        <EditText
            android:id="@+id/weight"
            android:layout_width="100dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/check_ytxs"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/tex_ytxs"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="引体向上"
            android:gravity="center"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/text_ytxs"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/check_jump"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="跳远（厘米）"
            android:gravity="center"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/text_jump"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/check_50"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="50米（秒）"
            android:gravity="center"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/text_50"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center">
        <CheckBox
            android:id="@+id/check_md"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <Button

            android:background="#ffffff"
            android:id="@+id/btn_mubiaomd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="目标免段"/>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center">
        <Button
            android:background="#ffffff"
            android:id="@+id/sport_submit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="提交"/>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="成绩"
            android:gravity="center"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/detail_score"
            android:textColor="#FF0000"
            android:gravity="center"
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>
    <com.dpizarro.uipicker.library.picker.PickerUI
        android:id="@+id/picker_ui_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        pickerui:autoDismiss="true"
        pickerui:backgroundColor="#4cffa5"
        pickerui:blur="true"
        pickerui:blur_FilterColor="#ff5e48"
        pickerui:blur_downScaleFactor="@integer/blur_downscale_min"
        pickerui:blur_radius="@integer/blur_radius_min"
        pickerui:blur_use_renderscript="true"
        pickerui:entries="@array/mianduan"
        pickerui:itemsClickables="true"
        pickerui:linesCenterColor="#3941ff"
        pickerui:textCenterColor="#000000"
        pickerui:textNoCenterColor="#737373" />
</RelativeLayout>
